/*-----------------------------

Base styles

-----------------------------*/

*, *:before, *:after
  box-sizing: border-box

html
  background: #f7f7f7

body
  font-family: "museo-sans", Helvetica, Arial, sans-serif;
  height: 100%
  font-size: 18px
  line-height: 26px
  color: #444

h1, h2, h3
  font-weight: 700

h1
  margin-bottom: 20px
  font-size: 26px
  line-height: 30px

h2
  margin-bottom: 20px
  font-size: 23px

h3
  margin-bottom: 15px
  font-size: 20px

@media (max-width: 450px)
  h1
    font-size: 24px

p
  margin-bottom: 20px

a
  color: #00b9cf
  display: inline-block
  text-decoration: none
  border-bottom: 1px dotted
  &:hover
    color: #009aac

em
  font-style: italic

.footnote
  font-size: 13px
  font-style: italic
  margin-top: -20px
  margin-left: 5px

.nav-main
  width: 17%
  height: 100 vh
  z-index: 2
  padding: 30px 0
  float: left

.content
  float: left
  width: 83%

@media (max-width: 960px)

  .nav-main
    width: 22%

  .content
    width: 78%
    height: 100vh
    overflow-y: scroll

@media (max-width: 650px)

  .nav-main
    width: 100%
    height: auto

  .content
    width: 100%
    height: auto
    overflow-y: auto

//- clearfix
.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both
