/*-----------------------------

Navigation

-----------------------------*/

.nav-main
  z-index: 2
  padding: 30px 0
  position: relative
  background: $blue
  font-size: 16px
  line-height: 18px

  .nav-item
    padding: 10px 20px
    display: block
    border: none
    color: white

    &.home
      margin-bottom: 50px
      position: relative
      span
        margin-top: 5px
        display: block
        font-size: 14px
        color: #F3A480

  a.nav-item:hover
    border-left: 5px solid rgba(255,255,255,.3)

@media (max-width: 650px)

  .nav-main
    padding: 0
    background: white

    .nav-item

      &:not(.home)
        width: 33.33%
        padding: 15px 10px
        display: inline-block
        background: white
        color: #444
        text-align: center
        border-bottom: 1px solid #eee
        &:not(:last-child)
          border-right: 1px solid #eee

      &.home
        width: 100%
        margin-bottom: 0
        padding: 15px
        background: $blue
        color: white
        text-align: center
        span
          margin-left: 10px
          display: inline-block
          font-size: 16px

    a.nav-item:hover
      border-left: none
