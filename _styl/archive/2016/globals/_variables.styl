/*--------------------------------------------------------------------
* $VARIABLES
--------------------------------------------------------------------*/

// Font Families
$font-family-proxima = 'proxima-nova', Helvetica, Arial, sans-serif
$font-family-georgia = Georgia, Times, serif
$font-family-clavo = 'clavo', Georgia, Times, serif

// Font Weights
$font-weight-thin = 100
$font-weight-light = 300
$font-weight-medium = 500
$font-weight-semibold = 600


// Colors
white(alpha)
  rgba(255,255,255,alpha)

black(alpha)
  rgba(0,0,0,alpha)

$grey-drk = #444
$grey-med = #888
$grey-light = #bbb
$grey-lightest = #eee
$blue = #0aa7e2
$blue-light = lighten($blue,80%)

$red = #e80044
$yellow = #faaf5c
$green = #43bb6e

$teal = darken(#8ec1c2,10%)

// Borders
$border-grey = 1px solid #ddd

// Breakpoints
$bp-sm = 400px
$bp-md = 800px
$bp-lg = 1200px
$bp-xl = 1400px