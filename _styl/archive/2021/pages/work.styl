/*--------------------------------------------------------------------
* $WORK
--------------------------------------------------------------------*/

.work

  &.web .main-nav .nav-web,
  &.art .main-nav .nav-art
    nav-active()

  h2
    font-size: 2rem
    margin: 0
    a
      link-alt()
      line-height: 1

  .project-image
    margin-bottom: .5em
  a.project-image
    hoverShadow()

  a.project-image img,
  img.project-image,
  div.project-image
    padding: .3em
    border: $ui-border

  .project img,
  .project-image
    display: block
    width: 100%

  .project small
    display: block

  // .projects-list
  .projects-list
    display: grid

    @media screen and (max-width: $bp-sm)
      grid-gap: 1.5em
      
      .multi > div:not(:last-child)
        margin-bottom: .5em

    @media screen and (min-width: $bp-sm + 1)
      grid-template-columns: 1fr 1fr
      grid-gap: 1.5em 2em

      .wide
        grid-column: 1 / -1

      .multi
        grid-column: 1 / -1
        display: grid
        grid-template-columns: 1fr 1fr
        grid-gap: 1em

    @media screen and (min-width: $bp-md + 1)
      grid-gap: 2em 2.5em

  &.web
    .project
      display: grid
      grid-template-columns: 1fr 20px
      grid-template-rows: auto
      grid-gap: 10px
      grid-template-areas: "image image" "title icon" "desc ."
      align-content: start

      .project-image
        grid-area: image
      h2
        grid-area: title
        align-self: center
      .social
        grid-area: icon
        align-self: center
      p:last-of-type
        grid-area: desc
        margin-bottom: 0
