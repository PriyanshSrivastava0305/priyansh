/*--------------------------------------------------------------------
* $CONTENT
--------------------------------------------------------------------*/

main
  @media screen and (max-width: $bp-xs)
    padding-top: 1.2em
    padding-bottom: 1.2em
  @media screen and (min-width: $bp-xs + 1)
    padding-top: 2.5em
    padding-bottom: 2.5em

.container
  width: 100%
  max-width: $max-w
  margin-left: auto
  margin-right: auto
  @media screen and (max-width: $bp-xs)
    padding-left: 1.2em
    padding-right: 1.2em
  @media screen and (min-width: $bp-xs + 1)
    padding-left: 2em
    padding-right: 2em

.intro
  max-width: 450px
  @media screen and (max-width: $bp-sm)
    margin-bottom: 2em
  @media screen and (min-width: $bp-sm + 1)
    margin-bottom: 3em
