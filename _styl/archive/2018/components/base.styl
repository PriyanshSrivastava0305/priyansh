/*--------------------------------------------------------------------
* $BASE - For Home and Others
--------------------------------------------------------------------*/

*, *:before, *:after
  box-sizing: border-box

::selection
  background: cyan
  color: black

img
  max-width: 100%

body
  font-family: $font-family-proxima
  font-weight: $font-weight-light
  font-size: 112.5%
  line-height: 1.4
  color: black

  &:not(.home)
    min-height: 100vh
    height: 100%
    display: flex
    flex-direction: column
    justify-content: space-between

a
  text-decoration: none
