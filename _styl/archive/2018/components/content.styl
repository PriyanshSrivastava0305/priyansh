/*--------------------------------------------------------------------
* $CONTENT
--------------------------------------------------------------------*/

.content
  width: 100%
  max-width: 800px
  margin: 50px auto
  align-self: center

  @media screen and (max-width: 600px)
    margin-bottom: 20px

  .wide
    margin-bottom: 30px

    > img
      margin-bottom: 0

  img
    display: block
    margin-bottom: 30px

    &.border
      border: 1px solid #ddd

  & > *:not(img),
  & > img:not(.wide)
    max-width: 600px
    margin-left: auto
    margin-right: auto

@supports (display: grid)

  .content
    display: grid
    grid-template-columns: b(full-start) minmax(1em, 1fr) b(main-start) minmax(0, 30em) b(main-end) minmax(1em, 1fr) b(full-end)

    & > *
      grid-column: main

    .wide, pre
      grid-column: full

    & > *:not(img),
    & > img:not(.wide)
      max-width: 100%
      margin-left: 0
      margin-right: 0
