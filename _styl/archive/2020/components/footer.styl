/*--------------------------------------------------------------------
* $FOOTER
--------------------------------------------------------------------*/

.main-footer
  background-color: $grey-drk
  color: white

  & > .container
    display: flex

    @media screen and (max-width: 650px)
      min-height: 160px
      flex-direction: column
      justify-content: center
    @media screen and (min-width: 651px)
      min-height: 100px
      align-items: center
      justify-content: space-between

  a
    display: inline-block
    vertical-align: middle
    @media screen and (max-width: 650px)
      margin-right: 1em
      margin-top: .7em
    @media screen and (min-width: 651px)
      margin-left: 1em

    &:not(.social)
      background-image: none
    &:not(.social):hover
      background-image: $gradient-white

  .motto
    display: none

.no-js .motto
  display: block

.no-js .toggle-button
  display: none

.toggle-button
  margin: 0
  padding: 0
  font-family: $font-family-rubik
  display: flex
  align-items: center
  background-color: transparent
  color: white
  border: none
  font: inherit
  cursor: pointer
  @media screen and (max-width: 650px)
    margin-bottom: 10px
  @media screen and (min-width: 651px)
    margin: 0

  &:hover
    .toggle-text
      background-image: $gradient-white

  &:focus:focus-visible
    outline: 3px solid $pink
    background-image: none

  &:focus:not(:focus-visible)
    outline: none

  &:active
    transform: translateY(1px)

.toggle-text
  background: no-repeat
  background-size: 100% 1px
  background-position: center bottom
  font-weight: $font-weight-medium

.toggle-icon
  width: 20px
  height:20px
  margin-right: .3em
  background-image: url('/assets/images/archive/2020/dark-mode-icons.svg')
  background-size: 40px 20px
  background-position: var(--toggle-bg-position)
 
