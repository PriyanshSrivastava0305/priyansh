/*--------------------------------------------------------------------
* $VARIABLES
--------------------------------------------------------------------*/

// Font Families
$font-family-georgia = Georgia, Times, serif
$font-family-rubik = 'Rubik', Helvetica, Arial, sans-serif

// Font Weights
$font-weight-light = 300
$font-weight-medium = 500

// Icons
$social-w = 20px

// Mixins

b(val) //b for bracket
  unquote("[") + val + unquote("]")

// Colors

white(alpha)
  rgba(255,255,255,alpha)

black(alpha)
  rgba(0,0,0,alpha)

grey(alpha)
  rgba(34,34,41,alpha)

$grey-drk = #333
$grey-med = #888
$grey-light = #ccc
$grey-lightest = #ddd

$white = #fcf7f5
$ice = #f0f8ff
$ice-drk = #c4d9e8
$gold = #f4e04e
$gold-drk = #d8bf2e
$teal = #5db2a5
$teal-med = #30877a
$teal-drk = #1c6054
$pink = #c6588a
$pink-med = #a3336b
$pink-drk = #681a45
$tan = #dbc8a3

:root
  --color-mode: 'light'
  --color-dark: #555
  --color-default: $grey-drk
  --color-light: white
  --background: $white
  --text-color: $grey-drk
  --toggle-bg-position: 0 0
  --toggle-dark-position: -20px 0
  --github-icon-position: -($social-w*5)
  --hover-shadow: $grey-lightest
  --code-bg: alpha($teal,.4)

@media (prefers-color-scheme: dark)
  :root
    --color-mode: 'dark'

  :root:not([data-user-color-scheme])
    --background: var(--color-dark)
    --text-color: var(--color-light)
    --toggle-bg-position: var(--toggle-dark-position)
    --github-icon-position: var(--github-icon-position-dark)
    --invert: invert(1)
    --hover-shadow: $grey-drk
    --github-icon-position: -($social-w*3)
    --code-bg: $grey-drk

[data-user-color-scheme='dark']
  --background: var(--color-dark)
  --text-color: var(--color-light)
  --toggle-bg-position: var(--toggle-dark-position)
  --github-icon-position: var(--github-icon-position-dark)
  --invert: invert(1)
  --hover-shadow: $grey-drk
  --github-icon-position: -($social-w*3)
  --code-bg: $grey-drk

// Breakpoints

$bp-xxs = 380px
$bp-xs  = 500px
$bp-sm  = 750px
$bp-md  = 920px

// Gradients

$gradient-links = linear-gradient(var(--text-color, $grey-drk), var(--text-color, $grey-drk))
$gradient-dark = linear-gradient($grey-drk, $grey-drk)
$gradient-white = linear-gradient(to right, white, white)
$gradient-color = linear-gradient(to right, $pink, $teal)

// Shadows for linked images

hoverShadow()
  display: block
  background: none
  transition: box-shadow 150ms ease-in-out

  &:focus
    box-shadow: 0 0 0 8px $pink
  &:hover
    box-shadow: 0 0 0 8px var(--hover-shadow, $grey-lightest)
