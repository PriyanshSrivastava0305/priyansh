/*--------------------------------------------------------------------
* $404
--------------------------------------------------------------------*/

.fourohfour
  display: flex
  flex-direction: column
  background-color: $teal

  .main-nav
    background-color: var(--background, $white)

  .main-footer
    margin-top: auto

  @media screen and (min-width: 600px)
    .main-nav > :last-child
      &:after
        content: 'Nowhere'
        margin-left: 1em
        display: inline-block
        background-repeat: no-repeat
        background-size: 100% 1px
        background-position: center bottom
        nav-active()

  main
    display: grid
    justify-content: center

  @media screen and (max-width: $bp-sm)
    .fourohfour-wrapper
      width: 320px
      min-height: 200px
      background-repeat: no-repeat
      background-image: url('/assets/images/archive/2020/404-default.svg')
      background-size: contain
      background-position: center center

  @media screen and (min-width: $bp-sm + 1)
    main
      padding-bottom: 10px

    .visual
      position: relative

      // drag cover bottom left/right
      &:before,
      &:after
        content: ''
        width: calc((50% - 80px/2))
        height: 180px
        display: block
        position: absolute
        bottom: 0
        z-index: 10
      &:before
        left: 0
      &:after
        right: 0

    .fourohfour-wrapper
      width: 450px
      height: 465px
      position: relative
      display: grid
      justify-items: center

      &:before,
      &:after
        content: ''
        width: 100%
        display: block
        position: absolute
        z-index: 10

      // drag cover top
      &:before
        height: 300px
        top: -100px

      // drag cover center
      &:after
        height: 115px
        background-color: $teal
        background-repeat: no-repeat
        background-image: linear-gradient($teal-med,$teal-med)
        background-size: 100px 1px
        background-position: center bottom
        top: 198px

    .illo
      width: 450px
      max-width: none
      position: absolute
      top: 188px
      z-index: 10

    .lost
      width: 432px
      height: 50px
      position: absolute
      background-image: url('/assets/images/archive/2020/404-lost.jpg')
      background-color: $teal

      &:first-child
        top: 50px
        background-position: 50% -50px
        z-index: 1
      &:nth-child(2)
        top: 100px
        background-position: 50% -100px
        z-index: 3
      &:nth-child(3)
        top: 150px
        background-position: 50% -150px
        z-index: 5

    .fourohfour-pull
      width: 100%
      height: 364px
      position: relative
      display: grid
      justify-items: center

    .label
      width: 432px
      height: 100px
      position: absolute
      background-image: url('/assets/images/archive/2020/404-default.svg')
      background-color: $teal

      &:first-child
        top: 0
        background-position: 50% 0
        mask-image: url('/assets/images/archive/2020/404-mask-1.png')
        mask-position: 0 1px
        z-index: 2
      &:nth-child(2)
        top: 50px
        background-position: 50% -50px
        mask-image: url('/assets/images/archive/2020/404-mask-1.png')
        mask-position: 0 0
        z-index: 4
      &:nth-child(3)
        top: 100px
        background-position: 50% -100px
        mask-image: url('/assets/images/archive/2020/404-mask-3.png')
        mask-position: 0 100%
        z-index: 6

    .handle-down
      position: absolute
      left: 50%
      bottom: 0
      transform: translateX(-46%)
