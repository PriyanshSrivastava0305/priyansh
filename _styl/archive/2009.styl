a#fow
  top: 267px

a#naked, a#project-runway, a#nfg
  left: 655px

a#nfg
  top: 178px

a#naked
  top: 303px

div#recommend a span
  background-color: #d8e5e4
  border: 1px solid #574e4e
  color: #574e4e
  display: none
  padding: 0 10px
  *padding: 10px
  position: absolute
  top: 20px
  right: 15px
  z-index: 2

div#recommend a span.bottom
  top: -20px

div#recommend a span h2, div#recommend a span p
  font-size: 11px

div#recommend a span author
  font-weight: normal

span#wide-200
  width: 200px

span#wide-250
  width: 250px

div#recommend a:hover span
  display: block

