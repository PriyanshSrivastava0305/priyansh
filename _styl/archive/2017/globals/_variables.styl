/*--------------------------------------------------------------------
* $VARIABLES
--------------------------------------------------------------------*/

// Font Families
$font-family-proxima = 'proxima-nova', Helvetica, Arial, sans-serif
$font-family-georgia = Georgia, Times, serif
$font-family-helvetica = 'Helvetica Neue', Helvetica, Arial, sans-serif
$font-family-ocr = 'ocr-a-std', monospace

// Font Weights
$font-weight-thin = 100
$font-weight-light = 300
$font-weight-medium = 500
$font-weight-semibold = 600

// Mixins

b(val) //b for bracket
  unquote("[") + val + unquote("]")

highlight(hue)
  font-weight: $font-weight-semibold
  display: inline-block
  background: hue
  color: white

underline(hue)
  background: linear-gradient(to top, hue 35%, transparent 35%)

// Grid

grid-col-full()
  grid-column: 1 / -1

grid-row-full()
  grid-row: 1 / -1

// Colors

white(alpha)
  rgba(255,255,255,alpha)

black(alpha)
  rgba(0,0,0,alpha)

gold(alpha)
  rgba(255,215,0,alpha)

$red = rgb(233,61,52)

$grey-drk = #444
$grey-med = #888
$grey-light = #ccc
$grey-lightest = #ddd


// Backgrounds

stripes(direction, x, y)
  background: repeating-linear-gradient(direction, black, black 50%, transparent 50%, transparent 100%)
  background-size: x y


// Media queries

