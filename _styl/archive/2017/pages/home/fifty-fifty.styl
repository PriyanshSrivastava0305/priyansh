/*--------------------------------------------------------------------
* $HOME - Fifty fifty
--------------------------------------------------------------------*/

.home
  border-top: 6px solid $red

  .main-nav
    grid-column: 6 / -1
    grid-row: 1 / 2
    align-self: center
    justify-self: center
    text-align: center
    font-size: 14px

    a
      margin-right: 20px
      display inline-block
      color: black

      &:hover
        underline(gold)

  h1
    grid-column: 6 / -1
    grid-row: 4 / 5
    line-height: 1.1
    text-align: center

    .name
      margin-bottom: 20px
      display: block
      font-size: 42px

  .intro
    grid-column: 7 / 10
    grid-row: 8 / 10
    text-align: center
    font-size: 14px

    &:before
      content: ''
      width: 30px
      height: @width
      margin: 0 auto 20px
      display: block
      background: $red
      border-radius: 50%

  .lynn
    grid-column: 1 / 6
    grid-row-full()
    background: $grey-light
    text-align: center

    &:before
      content: ''
      width: 400px
      height: @width
      position: absolute
      right: -100px
      top: 150px
      background: $red
      border-radius: 50%

    img
      height: 100%
      filter: contrast(1.8) grayscale(100%) opacity(.5)
