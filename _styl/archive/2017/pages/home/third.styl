/*--------------------------------------------------------------------
* $HOME - Third
--------------------------------------------------------------------*/

.home
  
  .main-nav, h1, .intro
    grid-column: 8 / -1
    padding-left: 25px
    padding-right: @padding-left

  .main-nav
    grid-row: 1 / 2
    font-size: 14px

    a
      margin-right: 15px
      display inline-block
      color: black

      &:hover
        underline($red)

  h1
    grid-row: 3 / 5

    &:after
      content: ''
      display: block
      width: 150px
      height: 1px
      margin-top: 50px
      background: black

    .name
      display: block
      font-size: 40px
      text-transform: uppercase
      font-weight: $font-weight-semibold
      letter-spacing: 3px

    .desc
      display: block

  .intro
    grid-row: 5 / 8
    font-size: 20px

    span
      margin-bottom: 24px
      display: block

  .lynn
    grid-column: 1 / 8
    grid-row-full()
    display: flex
    justify-content: center
    background: $red
    background-image: radial-gradient(circle at 5% 5%, gold(.5),
                                                       transparent 60%),
                      radial-gradient(circle at 90% 80%, gold(.5),
                                                         transparent 60%)

    @media screen and (max-height: 815px)
      align-items: center
    @media screen and (min-height: 816px)
      align-items: flex-end

    img
      width: 70%
      filter: contrast(1.6) hue-rotate(290deg) opacity(.5) drop-shadow(30px 30px 0 $red)
      mix-blend-mode: multiply
