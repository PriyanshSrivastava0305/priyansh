/*--------------------------------------------------------------------
* $HOME - Boxes
--------------------------------------------------------------------*/

.home
  background: black
  background-image: radial-gradient(circle at 90% 90%, white(.2) 26px, transparent 30px),
                    radial-gradient(circle at 40% 60%, white(.2) 36px, transparent 40px),
                    radial-gradient(circle at 10% 80%, white(.2) 20px, transparent 24px),
                    radial-gradient(circle, white(.4) 2px, transparent 10px),
                    radial-gradient(circle, white(.4) 2px, transparent 10px),
                    radial-gradient(circle, white(.2) 1px, transparent 6px),
                    radial-gradient(circle, white(.15) 1px, transparent 6px),
                    radial-gradient(circle, white(.2) 1px, transparent 6px),
                    radial-gradient(circle, white(.25) 1px, transparent 6px)
  background-size: 100% 100%,
                   100% 100%,
                   100% 100%,
                   600px 600px,
                   700px 700px,
                   400px 400px,
                   500px 500px,
                   300px 300px,
                   400px 400px
  background-position: 0 0,
                       0 0,
                       0 0,
                       0 0,
                       -180px 200px,
                       -20px 80px,
                       -80px 40px,
                       -120px 280px,
                       -150px -20px
  transform: rotate(180deg)
  color: white

  // z-index
  .lynn
    z-index: 0
  .main-nav, h1, .intro
    position: relative
    z-index: 1

  .main-nav
    grid-col-full()
    grid-row: 1 / 3
    font-size: 14px
    text-align: center

    a
      margin: 0 20px
      display inline-block
      color: white

      &:hover
        underline($red)

  h1
    grid-column: 2 / 10
    grid-row: 3 / 4
    text-align: center
    font-size: 24px
    
    .name
      display: block
      text-transform: uppercase
      font-weight: $font-weight-semibold
    
    .desc
      opacity: .7

  .intro
    grid-column: 5 / 7
    grid-row: 4 / 6
    text-align: center

  .lynn
    grid-col-full()
    grid-row-full()
    display: flex
    justify-content: center
    align-items: flex-end
    background: radial-gradient(circle at center bottom, $red 0, transparent 50%)

    img
      height: 50%
      filter: contrast(1.2)
      opacity: .7
      @supports (mix-blend-mode: soft-light)
        mix-blend-mode: soft-light
        opacity: 1
