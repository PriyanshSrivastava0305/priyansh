/*--------------------------------------------------------------------
* $HOME - Big nav
--------------------------------------------------------------------*/

.home
  background: linear-gradient(to left, black 50%, white 50%)

  // z-index
  .lynn
    z-index: 0
  .main-nav
    position: relative
    z-index: 1

  .main-nav
    grid-column: 1 / 6
    grid-row: 4 / -1
    font-size: 90px
    line-height: 1.3

    a
      display block
      color: black

      &:hover
        background-repeat: no-repeat
        background-image: repeating-linear-gradient(-40deg, gold, gold 10px,
                                                            transparent 10px,
                                                            transparent 20px)
        background-size: 100% 40%
        background-position: 0 bottom

  h1
    grid-column: 7 / 10
    grid-row: 8 / 10
    padding-bottom: 40px
    border-bottom: 3px solid gold
    line-height: 1.1
    color: white

    .name
      margin-bottom: 10px
      display: block
      font-size: 20px
      font-weight: $font-weight-semibold

  .intro
    grid-column: 7 / 10
    grid-row: 3 / 6
    font-size: 28px
    color: white
    
    span
      margin-bottom: 20px
      display: block

  .lynn
    grid-column: 2 / 6
    grid-row: 1 / 10
    margin-right: -8px
    background: $grey-light

    img
      height: 100%
      filter: contrast(1.8) grayscale(60%) opacity(.3)
