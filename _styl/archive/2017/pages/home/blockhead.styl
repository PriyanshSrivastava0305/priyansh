/*--------------------------------------------------------------------
* $HOME - Block head
--------------------------------------------------------------------*/

.home
  padding: 30px 30px 0
  padding-right: 0
  font-size: 14px

  &:before
    grid-column: 10 / -1
    grid-row: 1 / 3
    align-self: stretch
    background: $red

  &:after
    grid-column: 3 / 8
    grid-row: 5 / 9
    z-index: 2
    align-self: stretch
    background: gold
    mix-blend-mode: multiply

  .main-nav
    grid-column: 1 / 3
    grid-row: 1

    a
      margin-bottom: 5px
      display: block
      font-weight: $font-weight-semibold
      color: black

      &:hover
        highlight(black)

  h1
    grid-column: 1 / 9
    grid-row: 2

    .name
      font-weight: $font-weight-semibold

  .intro
    grid-column: 1 / 7
    grid-row: 3

  .lynn
    grid-column: 3 / -1
    grid-row: 4 / -1
    margin-right: 30px
    opacity: .7
    @supports (mix-blend-mode: multiply)
      opacity: 1

    img
      width: 100%
      filter: contrast(2) grayscale(100%)

@media screen and (max-height: 400px)

  .home

    .main-nav
      grid-column: 1 / -1 !important
      margin-bottom: 20px !important

      a:not(.nav-home)
        margin-right: 15px !important
        display: inline-block !important

    h1
      margin-bottom: 20px !important

