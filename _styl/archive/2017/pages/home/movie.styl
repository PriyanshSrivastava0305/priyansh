/*--------------------------------------------------------------------
* $HOME - Movie
--------------------------------------------------------------------*/

.home
  background-color: #222
  background-image: radial-gradient(ellipse at center, transparent 70%, black(.8) 100%),
                    linear-gradient(45deg, white(.03) 20%, transparent 20%),
                    linear-gradient(60deg, white(.05) 25%, transparent 25%),
                    linear-gradient(-20deg, white(.05) 20%, transparent 20%),
                    linear-gradient(120deg, white(.02) 10%, transparent 10%),
                    linear-gradient(-100deg, white(.05) 20%, transparent 20%),
                    linear-gradient(-120deg, white(.05) 10%, transparent 10%)
  color: #ddd

  // z-index
  .lynn
    z-index: 0
  h1, .intro
    position: relative
    z-index: 1

  .main-nav
    grid-column: 2 / 5
    grid-row: 1 / 2

    a
      margin-right: 30px
      display inline-block
      color: #ddd

      &:hover
        underline(black)

  h1
    grid-column: 2 / 10
    grid-row: 3 / 6
    transform: rotate(-10deg) skewX(-15deg)

    .name
      display: block
      font-size: 200px
      text-transform: uppercase
      font-weight: $font-weight-semibold
      letter-spacing: 3px
      line-height: 1
      text-shadow: -10px -10px 0 gold(.4),
                   15px 15px 0 black(.8)

    .desc
      display: block
      font-size: 30px
      margin-left: 180px

  .intro
    grid-column: 2 / 7
    grid-row: 8 / 10
    font-size: 18px
    display: flex
    flex-direction: row

    span
      margin: 0 25px
      padding-top: 30px
      flex: 1
      border-top: 1px solid white(.1)

  .lynn
    grid-column: 4 / -1
    grid-row-full()
    align-self: stretch
    display: flex
    justify-content: flex-end

    img
      height: 110%
      margin-right: -20%
      filter: contrast(2.5) grayscale(100%) brightness(60%) drop-shadow(30px 30px 0 black(.3))
