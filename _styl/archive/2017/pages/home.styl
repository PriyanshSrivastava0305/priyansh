/*--------------------------------------------------------------------
* $HOME
--------------------------------------------------------------------*/

@import '../globals/_variables'
@import '../globals/_reset'

*, *:before, *:after
  box-sizing: border-box

.home
  position: relative
  font-family: $font-family-proxima
  font-weight: $font-weight-light
  font-size: 16px
  line-height: 1.4
  color: black

  ::selection
    background: cyan
    color: black

  .main-nav
    font-family: $font-family-ocr
    font-size: 12px

    .nav-home
      display: none

    a
      text-decoration: none

  a
    text-decoration: none

@import 'home/fallback'

@supports (display: grid)

  .home
    height: 100vh
    padding: 0
    display: grid
    grid-template-columns: repeat(10, 1fr)
    grid-template-rows: repeat(10, 1fr)
    grid-column-gap: 15px
    align-items: center
    text-align: left

    &:before,
    &:after
      content: ''

    .main-nav
      margin: 0
      text-align: left

      a
        margin: 0
        padding: 0

        &:hover
          background: none

    h1
      margin-bottom: 0
      font-size: 16px

      .name
        margin: 0
        display: inline
        font-size: inherit
        font-weight: $font-weight-normal

    .intro
      padding-top: 0
      background: none

      span
        margin: 0
        display: inline

    .lynn
      width: auto
      height: auto
      margin: 0
      background: none
      border-radius: 0
      align-self: stretch
      position: relative
      overflow: hidden
      text-align: left

      img
        height: auto

  @media $media300
    @import 'home/diagonal'

  @media $media400
    @import 'home/L-Y-N-N'

  @media $media500
