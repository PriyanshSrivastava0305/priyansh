/*--------------------------------------------------------------------
* $CONTENT
--------------------------------------------------------------------*/

main
  display: grid
  gap: var(--border-width)
  background-color: var(--border-color)

  > *
    background()

.tagline
  grid-column: 1 / -1
  padding: calc(var(--body-padding) * 2) var(--body-padding) calc(var(--body-padding) * 3)
  display: grid
  place-content: center
  text-align: center

  h1
    max-width: 22ch

hr
  height: 1px
  margin: 0
  background-color: var(--border-color)
  border: none

.content

  * + *
    margin-top: 1.2em

  ul:not(.unstyled)
    padding-left: 1.3em
    list-style-type: disc

  ul
    li + li
      margin-top: .5em

  video,
  figure
    max-width: 100%

  video
    margin-top: 1.4em
    & + p
      margin-top: 1.4em

  figure > a
    linked-img()

  source + img
    margin-top: 0

  p + small
    margin-top: 1.6em
    display: block

  hr
    margin: 1.5em 0 .5em

  blockquote:not(.tweet-text)
    border-left: $ui-border
    padding: .7em
    padding-left: 1.5em
    position: relative

    &::after
      content: '“'
      display: block
      position: absolute
      left: 0
      top: 1.3em
      transform: translateX(-50%)
      font-size: var(--font-md)
      line-height: 0
    &::before
      content: ''
      width: 1.3em
      height: @width
      display: block
      position: absolute
      left: 0
      top: .8em
      transform: translateX(-50%)
      background-color: var(--bg-color)
      border: $ui-border
      border-radius: 50%

    cite
      margin-top: .5em
      display: block
      text-align: right
      font-size: var(--font-sm)

      &::before
        content:'—'

  .footnote
    margin-top: .25em
    display: block
    text-align: center

  .callout
    border: 1px dashed var(--border-color)
    padding: 1em
    font-size: var(--font-sm)
