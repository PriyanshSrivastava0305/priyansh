html
  height: 100%

body
  background-color: #e1ebe0
  margin: 20px auto
  font-family: 'Lucida Grande', 'Lucida Sans Unicode', 'Lucida Sans', Verdana, Arial, sans-serif

body.right
  background: #fff url('/assets/images/archive/2007/bg-gradient.jpg') repeat-x top left
  padding: 0px

body.artwork
  background: #fff url('/assets/images/archive/2007/bg-gradient.jpg') repeat-x top left
  margin: 0

h1, h2, h3, h4, h5
  font-weight: normal
  text-align: right

p
  font-size: 11px
  text-align: justify

ul
  font-size: 11px

a
  outline: none

div#container
  height: 600px
  width: 964px
  margin: auto

div#nav
  background: transparent url('/assets/images/archive/2007/bg-nav.jpg') no-repeat top left
  border: 1px solid #000
  float: left
  height: 598px
  margin: auto
  width: 198px

div#middle
  background: transparent url('/assets/images/archive/2007/bg-gradient.jpg') repeat-x top left
  border: 1px solid #000
  float: left
  height: 598px
  margin: 0 10px 0
  width: 140px

div#middle iframe
  border: none
  height: 596px
  overflow: none
  width: 140px

div#right
  border: 1px solid #000
  float: right
  height: 598px
  margin: 0px
  width: 600px

div#right iframe
  border: none
  height: 596px
  overflow: auto
  width: 600px

/* navigation */

h1
  color: #fff
  font-size: 20px
  margin: 5px 5px 0 0
  text-transform: capitalize

h2
  color: #000
  font-size: 14px
  margin: -3px 5px 10px 0

div#nav a
  color: #fff
  display: block
  font-size: 14px
  margin: 2px 0 0
  outline: none
  padding: 2px 5px
  text-align: right
  text-decoration: none

div#nav a:hover
  background-color: #ccc
  color: #000

/* updates and blog and about */

div.blog
  margin: auto
  width: 530px

div.blog h3
  border-bottom: 1px solid #000
  font-size: 14px
  margin-bottom: 5px
  text-align: left
  width: 530px

div.blog p.date
  color: #292929
  font-size: 10px
  margin: 0 0 7px 0
  padding: 0

/* If no border is added in image plase add class */

div.blog img
  display: block
  margin: 18px auto

div.blog img.border
  border: 1px solid #000

div.blog a
  color: #000
  font-size: 14px
  text-decoration: none

div.blog a:hover
  text-decoration: underline

/* paintings */

div.artwork
  margin: 0px
  padding: 5px 0 5px 11px

div.artwork p.intro, div.design p.intro
  color: #c0c0c0
  font-size: 10px
  margin: 0

div.artwork p.title, div.design p.title
  margin-top: 10px
  margin-bottom: 7px

div.artwork a.top, div.design a.top
  color: #fff
  text-decoration: none

div.artwork a.bottom, div.design a.bottom
  color: #000
  text-decoration: none

div.artwork a.top:hover, div.artwork a.bottom:hover, div.design a.top:hover, div.design a.bottom:hover
  text-decoration: underline

div.artwork a img
  border: none
  display: inline-block
  margin-bottom: 2px
  margin-right: 4px

div.design
  margin: 5px 0 5px 7px

div.design p.title-top
  color: #fff
  margin-top: 0px
  margin-bottom: 7px

div.design p.title-light
  color: #fff

div.design p.title-dark
  color: #000

div.design a img
  border: none
  margin-bottom: 6px
