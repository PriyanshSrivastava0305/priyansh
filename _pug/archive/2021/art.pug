      //-   img.project-image.border(src='/assets/images/archive/2021/illo-lift-mountain.jpg', alt='an illustrated pop-up style treasure map with treacherous and obstacles on the way to a mountain peak', loading='lazy')
      .project
        img.project-image.border(src='/assets/images/archive/2021/illo-viewmaster.jpg', width='900', height='600', alt='an illustration of a vintage viewmaster and slide cartridges that are labeled “Today, Tomorrow, and 2045”', loading='lazy')
