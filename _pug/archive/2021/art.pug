        small #[strong Paintstagram] - 2012 - acrylic on canvas

      .project.wide
        picture
          source.project-image(srcset='/assets/images/archive/2021/cartoons-playing-poker-2000.jpg', media='(min-width: 750px)')
          img.project-image(src='/assets/images/archive/2021/cartoons-playing-poker.jpg', width='1200', height='809', alt='a painting parody of Dogs Playing Poker with cartoon characters like Daffy Duck, the Flash, and Ren and Stimpy')
        small #[strong Cartoons Playing Poker] - 2010 - acrylic on canvas

      .project.multi
        div
          img.project-image(src='/assets/images/archive/2021/japanese-american-gothic-1.jpg', width='700', height='906', alt='a painting of my friends Naomi and Ben as the two people in American Gothic', loading='lazy')
          small #[strong Japanese American Gothic] - 2010 - acrylic on canvas
        div
          .project-image
            img(src='/assets/images/archive/2021/japanese-american-gothic-2.png', width='650', height='452', alt='Ben and Naomi posing with the painting of them', loading='lazy')
            img(src='/assets/images/archive/2021/japanese-american-gothic-3.png', width='750', height='450', alt='Ben and Naomi dressed as the painting for Halloween', loading='lazy', style='margin-top: -1px')
