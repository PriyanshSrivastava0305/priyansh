      .project.multi
        div
          img.project-image(src='/assets/images/archive/2021/illo-manifold.jpg', width='1200', height='741', alt='an illustration of a long line at a dystopian ration station, through the lens of a virtual reality headset')
          small Illustrated storytelling for #[a(href='http://manifold.co/') Manifold]
        div
          img.project-image(src='/assets/images/archive/2021/illo-manifold2.jpg', width='1200', height='741', alt='an illustration of a broken wall, outside is a colorful and exciting marketplace')

      .project.multi
        div
          img.project-image.border(src='/assets/images/archive/2021/illo-css-tricks.jpg', width='1200', height='685', alt='hand-drawn technical diagrams showing CSS flexbox concepts', loading='lazy')
          small Illustrations for #[a(href='https://css-tricks.com/snippets/css/a-guide-to-flexbox/') CSS Tricks flexbox guide]
        div
          img.project-image.border(src='/assets/images/archive/2021/illo-css-tricks2.jpg', width='1200', height='685', alt='hand-drawn technical diagrams showing CSS grid concepts', loading='lazy')
          small Illustrations for #[a(href='https://css-tricks.com/snippets/css/complete-guide-grid/') CSS Tricks grid guide]

      .project
        img.project-image(src='/assets/images/archive/2021/illo-make-it-rain.jpg', width='900', height='507', alt='an illustrated of Lynn Fisher wearing novelty dollar sign glasses, holding stacks of cash and money falls from the sky', loading='lazy')
      .project
        img.project-image(src='/assets/images/archive/2021/illo-jack-of-all-trades.jpg', width='900', height='507', alt='an illustrated playing card Jack in the style of Hyperbole and a Half and yelling “All the trades!”', loading='lazy')

