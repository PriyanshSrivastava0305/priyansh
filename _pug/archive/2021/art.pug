      .project
        img.project-image(src='/assets/images/archive/2021/illo-stickers.jpg', width='900', height='900', alt='various stickers on a laptop', loading='lazy')
        small Stickers available on #[a(href='https://www.etsy.com/shop/lynnandtonic') Etsy]

      h2.wide#icons Icons

      .project
        img.project-image.border(src='/assets/images/archive/2021/icons-the-food-place.jpg', width='1200', height='900', alt='jalepeño poppers, pancakes, shrimp in a margarita glass, frozen yogurt', loading='lazy')
        small icon set for #[a(href='https://thefoodplace.cafe') The Food Place]
      .project
        img.project-image.border(src='/assets/images/archive/2021/icons-dim-sum.jpg', width='1200', height='900', alt='dumplings, egg rolls, buns, steamers', loading='lazy')
