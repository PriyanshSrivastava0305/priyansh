      .project
        img.project-image(src='/assets/images/archive/2021/we-were-all-yellow-2.jpg', width='1200', height='1209', alt='a painting of my friend Tiffany wearing a Calculus Camp shirt and doing some math homework with an abacus', loading='lazy')
