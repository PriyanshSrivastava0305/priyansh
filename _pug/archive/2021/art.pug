extends _layout

block vars
  - var pageTitle = 'Art Portfolio'
  - var pageDescription = 'A collection of illustrations, icons, and paintings by Lynn Fisher.'
  - var pagePath = 'art'
  - var bodyClass = 'work art'

block content

  header#content
    .container
      h1 Artwork

  main.content.container

    .projects-list

      h2.wide#illustration Illustration

      .project
        img.project-image(src='/assets/images/archive/2021/illo-roam.jpg', width='1200', height='900', alt='buffalo with googly eyes', loading='lazy')
        small Illustration for #[a(href='https://find.yourweirdos.com/posts/where-the-weirdos-roam') find.yourweirdos.com]

      .project
        img.project-image(src='/assets/images/archive/2021/illo-veggie-burger.jpg', width='1200', height='900', alt='cheeseburger under an x-ray showing patties made of floral patterns', loading='lazy')
        small Illustration for #[a(href='https://find.yourweirdos.com/posts/dont-call-it-a-veggie-burger') find.yourweirdos.com]

      .project.multi
        div
          img.project-image(src='/assets/images/archive/2021/heroku-hanafuda-1.png', width='1200', height='903', alt='mockups of Japanese hanafuda cards, illustrated in Heroku’s isometric line art style')
          small Illustrations for #[a(href='http://heroku.com/hanafuda') Heroku hanafuda]
        div
          img.project-image(src='/assets/images/archive/2021/heroku-hanafuda-2.png', width='1200', height='903', alt='photos of the final cards laid out and with the card box')

      .project
        img.project-image(src='/assets/images/archive/2021/illo-collectors-cabinet.jpg', width='1200', height='760', alt='a shelf with cubbies full of various collectables and curiosities', loading='lazy')
        small #[a(href='https://codepen.io/lynnandtonic/pen/LYGjqOo') CSS illustration with 50 divs]

      .project
        img.project-image(src='/assets/images/archive/2021/illo-strongman.jpg', width='1200', height='760', alt='old timey weight lifter in a striped leotard', loading='lazy')
        small CSS illustration for #divtober on #[a(href='https://a.singlediv.com') a.singlediv.com]

      .project
        img.project-image(src='/assets/images/archive/2021/illo-david-rose.jpg', width='1200', height='731', alt='David Rose wearing various outfits', loading='lazy')
        small Illustrations for #[a(href='https://davidrose.style') davidrose.style]

      .project
        img.project-image.border(src='/assets/images/archive/2021/illo-yeti.jpg', width='1200', height='731', alt='illustrations of a yeti at a desk with various backgrounds including a rainbow and flying money', loading='lazy')
