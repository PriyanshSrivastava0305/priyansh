doctype html
html(lang='en')

  //- Variable block for page-specific info
  block vars

  head

    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='chrome=1')
    meta(name='viewport',content='width=device-width, initial-scale=1, minimum-scale=1')

    meta(name='description', content=pageDescription)
    meta(name='author', content='Lynn Fisher')

    if bodyClass == 'home'
      title 2018 Site Archive | Lynn Fisher
    else
      title 2018 Site Archive | #{pageTitle} | Lynn Fisher

    link(rel='shortcut icon', href='/assets/images/archive/2018/burger-icon.png')
    link(rel='stylesheet', href='https://use.typekit.net/ebm6qdq.css')

    if bodyClass == 'home'
      link(rel='stylesheet', href='/assets/css/archive/2018-home.css')
    else
      link(rel='stylesheet', href='/assets/css/archive/2018.css')

    if bodyClass !== 'utility'
      meta(property='og:type',  content='website')
      meta(name='twitter:card', content='summary')
      meta(content='@lynnandtonic', name='twitter:site')
      meta(content='@lynnandtonic', name='twitter:creator')
      meta(content=pageDescription, name='twitter:description', property='og:description')
      meta(content='https://lynnandtonic.com/assets/images/archive/2018/lynn-card-2018.jpg', property='og:image')
      meta(content='https://lynnandtonic.com/assets/images/archive/2018/lynn-card-2018.jpg', name='twitter:image')
      if bodyClass == 'home'
        meta(content='https://lynnandtonic.com/archive/2018/', property='og:url')
        meta(content='https://lynnandtonic.com/archive/2018/', property='twitter:url')
        meta(content='2018 Site Archive', name='twitter:title', property='og:title')
      else
        meta(content='https://lynnandtonic.com/archive/2018/' + pagePath, property='og:url')
        meta(content='https://lynnandtonic.com/archive/2018/' + pagePath, property='twitter:url')
        meta(content='2018 Site Archive | ' + pageTitle, name='twitter:title', property='og:title')

    block scripts

  body(class=bodyClass)

    nav.main-nav
      a.logo(href='/archive/2018') Lynn Fisher
      a.nav-web(href='/archive/2018/web') Web
      a.nav-art(href='/archive/2018/art') Art
      a.nav-about(href='/archive/2018/about') About
      a.nav-thoughts(href='#') Thoughts
      a.nav-archive(href='/archive') Archive

    block content

    footer.main-footer
      span Have a great day!
      nav
        a(href='https://twitter.com/lynnandtonic') Twitter
        a(href='https://instagram.com/lynnandtonic') Instagram
        a(href='https://dribbble.com/lynnandtonic') Dribbble
        a(href='https://github.com/lynnandtonic') GitHub
        a(href='https://www.etsy.com/shop/lynnandtonic') Shop
        a(href='/feed.xml') RSS Feed

    script(data-goatcounter='https://lynnandtonic.goatcounter.com/count'
        async src='//gc.zgo.at/count.js')
